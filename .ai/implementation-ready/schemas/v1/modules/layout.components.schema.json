{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cardforge.app/schemas/v1/modules/layout.components.schema.json",
  "title": "Layout Component Library",
  "description": "Reusable layout component definitions for template layout acceleration.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "libraryId",
    "components"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "1.0.0"
    },
    "libraryId": {
      "type": "string",
      "minLength": 1
    },
    "components": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/LayoutComponent"
      }
    }
  },
  "$defs": {
    "LayoutComponent": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "componentId",
        "name",
        "target",
        "elements"
      ],
      "properties": {
        "componentId": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "target": {
          "type": "string",
          "enum": [
            "print",
            "digital",
            "both"
          ]
        },
        "description": {
          "type": "string"
        },
        "elements": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "description": "Component element payloads compatible with layout-template-core element contracts."
        }
      }
    }
  }
}
