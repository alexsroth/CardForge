{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cardforge.app/schemas/v1/core/card-data-template.schema.json",
  "title": "Card Data Template",
  "description": "Defines the structured data model for a card independent of layout target.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "dataTemplateId",
    "name",
    "fields"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "1.0.0"
    },
    "dataTemplateId": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "fields": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/FieldDefinition"
      }
    }
  },
  "$defs": {
    "BaseField": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "fieldId",
        "key",
        "label",
        "kind"
      ],
      "properties": {
        "fieldId": {
          "type": "string",
          "minLength": 1
        },
        "key": {
          "type": "string",
          "minLength": 1,
          "pattern": "^[a-zA-Z][a-zA-Z0-9_]*$"
        },
        "label": {
          "type": "string",
          "minLength": 1
        },
        "kind": {
          "type": "string"
        },
        "required": {
          "type": "boolean",
          "default": false
        },
        "description": {
          "type": "string"
        }
      }
    },
    "SingleLineTextField": {
      "allOf": [
        {
          "$ref": "#/$defs/BaseField"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "kind": {
              "const": "singleLineText"
            },
            "maxLength": {
              "type": "integer",
              "minimum": 1
            },
            "defaultValue": {
              "type": "string"
            }
          }
        }
      ]
    },
    "AreaTextField": {
      "allOf": [
        {
          "$ref": "#/$defs/BaseField"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "kind": {
              "const": "areaText"
            },
            "maxLength": {
              "type": "integer",
              "minimum": 1
            },
            "defaultValue": {
              "type": "string"
            }
          }
        }
      ]
    },
    "NumberField": {
      "allOf": [
        {
          "$ref": "#/$defs/BaseField"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "kind": {
              "const": "number"
            },
            "minimum": {
              "type": "number"
            },
            "maximum": {
              "type": "number"
            },
            "defaultValue": {
              "type": "number"
            }
          }
        }
      ]
    },
    "CategoryField": {
      "allOf": [
        {
          "$ref": "#/$defs/BaseField"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "options"
          ],
          "properties": {
            "kind": {
              "const": "category"
            },
            "options": {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "#/$defs/CategoryOption"
              }
            },
            "defaultOptionId": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      ]
    },
    "CategoryOption": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "label"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        }
      }
    },
    "ImageField": {
      "allOf": [
        {
          "$ref": "#/$defs/BaseField"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "kind": {
              "const": "image"
            },
            "assetKind": {
              "type": "string",
              "enum": [
                "image"
              ],
              "default": "image"
            },
            "recommendedPixelWidth": {
              "type": "integer",
              "minimum": 1
            },
            "recommendedPixelHeight": {
              "type": "integer",
              "minimum": 1
            },
            "placeholderAssetId": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      ]
    },
    "IconField": {
      "allOf": [
        {
          "$ref": "#/$defs/BaseField"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "kind": {
              "const": "icon"
            },
            "iconSetId": {
              "type": "string",
              "minLength": 1
            },
            "mappedCategoryFieldKey": {
              "type": "string",
              "minLength": 1,
              "description": "Optional category field whose options map to icon identifiers."
            }
          }
        }
      ]
    },
    "FieldDefinition": {
      "oneOf": [
        {
          "$ref": "#/$defs/SingleLineTextField"
        },
        {
          "$ref": "#/$defs/AreaTextField"
        },
        {
          "$ref": "#/$defs/NumberField"
        },
        {
          "$ref": "#/$defs/CategoryField"
        },
        {
          "$ref": "#/$defs/ImageField"
        },
        {
          "$ref": "#/$defs/IconField"
        }
      ]
    }
  }
}
